<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 建立类与表的映射 -->
	<class name="domain.Customer" table="cst_customer">
		<!-- 建立类中的属性与表中的主键对应 -->
		<id name="cust_id" column="cust_id" >
			<generator class="native"/>
		</id>
		
		<!-- 建立类中的普通的属性和表的字段的对应 -->
		<property name="cust_name" column="cust_name"/>
		<property name="cust_source" column="cust_source"/>
		<property name="cust_industry" column="cust_industry"/>
		<property name="cust_level" column="cust_level"/>
		<property name="cust_phone" column="cust_phone"/>
		<property name="cust_mobile" column="cust_mobile"/>
		
		
		<set name="linkMans" inverse="true" cascade="save-update,delete"> <!--  name 一的对象中   多的对象集合的 属性名称  inverse=true 放弃外键的维护  cascade="save-update"客户级联保存-->
			<key column="lkm_cust_id" /> <!-- column 多的一方的外键名称 -->
			<one-to-many class="domain.LinkMan"/> <!-- 	class : 多的一方的类的全路径 -->
		</set>
		
		
	</class>
</hibernate-mapping>